# ~/.dotfiles/git/gitconfig
# -------------------------

[init]
	defaultBranch = main

[core]
	editor = nvim
	pager = delta
	autocrlf = input
	excludesFile = ~/.gitignore_global

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	side-by-side = true
	line-numbers = true
	syntax-theme = Dracula
	dark = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[alias]
	st = status -sb
	graph = log --oneline --graph --decorate --all
	last = log -1 HEAD --stat
	unstage = reset HEAD --
	amend = commit --amend --no-edit
	wip = !git add -A && git commit -m 'wip'
	undo = reset --soft HEAD~1
	branches = branch -a --sort=-committerdate
	tags = tag -l --sort=-v:refname
	stashes = stash list

[pull]
	rebase = true

[push]
	autoSetupRemote = true
	default = current

[fetch]
	prune = true

[rerere]
	enabled = true
[user]
	email = ijustynclark@gmail.com
